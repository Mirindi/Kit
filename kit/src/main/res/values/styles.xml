<resources>

    <!-- Base application theme. -->
    <style name="Kit.RootContainer">
        <item name="android:background">@color/background_general</item>
        <item name="android:paddingTop">@dimen/container_padding</item>
        <item name="android:paddingRight">@dimen/container_padding</item>
        <item name="android:paddingLeft">@dimen/container_padding</item>

    </style>

    <style name="Kit.Icon">
        <item name="android:background">@color/clear</item>
    </style>

    <style name="Kit.Icon.Small">
        <item name="android:padding">@dimen/icon_padding_sm</item>
    </style>

    <style name="Kit.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/body_text</item>
    </style>
    <!-- TEXTVIEW -->
    <style name="Kit.TextView.Caption">
        <item name="android:textSize">@dimen/font_caption</item>
        <item name="android:textColor">@color/grey_600</item>
        <!--<item name = "android:textStyle">bold</item>-->
        <!--<item name = "android:textAllCaps">true</item>-->
        <!--<item name = "android:paddingTop">@dimen/md_spacing</item>-->
        <!--<item name = "android:paddingBottom">@dimen/md_spacing</item>-->
    </style>

    <style name="Kit.TextView.Display">
        <item name="android:paddingTop">@dimen/sm_spacing</item>
        <item name="android:paddingBottom">@dimen/sm_spacing</item>
        <item name="android:textSize">@dimen/font_display2</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/body_text</item>
    </style>

    <style name="Kit.TextView.Display.Sub">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_display1</item>
    </style>

    <style name="Kit.TextView.Body">
        <item name="android:textSize">@dimen/font_body</item>
        <item name="android:textColor">@color/body_text</item>
    </style>

    <style name="Kit.TextView.Label">
        <item name="android:textSize">@dimen/font_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Kit.TextView.ValueLabel">
        <item name="android:textSize">@dimen/font_label</item>
        <item name="android:textColor">@color/background_text</item>

    </style>

    <style name="Kit.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawableBottom">@drawable/edittext_underline</item>
        <item name="android:textAppearance">@style/Kit.TextView</item>
    </style>

    <!-- Button -->
    <style name="Kit.Button">
        <item name="android:textAppearance">@style/Kit.TextView.Label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_general</item>
        <item name="android:paddingTop">@dimen/icon_padding_reg</item>
        <item name="android:paddingBottom">@dimen/icon_padding_reg</item>
        <item name="android:paddingLeft">@dimen/icon_padding_reg</item>
        <item name="android:paddingRight">@dimen/icon_padding_reg</item>
        <item name="android:background">@drawable/button_general_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Kit.Button.Primary">
        <item name="android:background">@drawable/button_primary_rounded</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Kit.Button.Pill">
        <item name="android:background">@drawable/button_general_pill</item>
        <item name="android:paddingLeft">@dimen/icon_padding_lg</item>
        <item name="android:paddingRight">@dimen/icon_padding_lg</item>
    </style>

    <style name="Kit.Button.Primary.Pill">
        <item name="android:background">@drawable/button_primary_pill</item>
        <item name="android:paddingLeft">@dimen/icon_padding_lg</item>
        <item name="android:paddingRight">@dimen/icon_padding_lg</item>
    </style>
</resources>
